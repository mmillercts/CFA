{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": "node",
			"args": [
				"server.js"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Start Simple Server",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"http.server",
				"8080"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Open in Browser",
			"type": "shell",
			"command": "start",
			"args": [
				"http://localhost:8080"
			],
			"group": "build",
			"problemMatcher": []
		}
	]
}